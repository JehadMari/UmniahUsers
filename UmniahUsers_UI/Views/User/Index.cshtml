@model IEnumerable<UmniahUsers_UI.Models.UserModel>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-6">
        <h3 class="text-dark">Users List</h3>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Register" asp-controller="User" class="btn btn-info">
            <i class="fas fa-plus"></i>  Add New User
        </a>
    </div>
</div>
<div class="row mb-3">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <input type="text" id="search" class="form-control" placeholder="Search" />
            </div>
        </div>
    </div>
</div>
@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="border bg-white">
                <table class="table table-striped table-hover border" style="width:100%">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Mobile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CreationDate)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.UserName)
                                </td>
                                <td class="full-name">
                                    @Html.DisplayFor(m => item.FullName)
                                </td>
                                <td class="mobile">
                                    @Html.DisplayFor(m => item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.CreationDate)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="User" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa fa-pencil"></i> Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <span>No Data</span>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
